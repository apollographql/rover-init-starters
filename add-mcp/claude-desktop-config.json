{
  "mcpServers": {
    "{{PROJECT_NAME}}-graphql": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--env-file",
        ".env",
        "-p",
        "5000:5000",
        "apollographql/apollo-runtime-container:latest"
      ],
      "env": {
        "MCP_ENABLE": "1",
        "MCP_PORT": "5000",
        "PROJECT_NAME": "{{PROJECT_NAME}}",
        "GRAPHQL_ENDPOINT": "{{GRAPHQL_ENDPOINT}}"
      }
    }
  }
}